{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJs",
    "esModuleInterop": true,
    "target": "es2018",
    "lib": ["ES5", "ES6", "ES2015", "ES2016", "ES2017", "ES2018", "ESNext", "DOM"],
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "stripInternal": true,
    "declaration": true,
    "baseUrl": ".",
    "jsx": "react",
    "removeComments": true,
    "typeRoots": ["node_modules/@types", "node_modules/@hashsnap"]
  },
  "include": ["./*"]
}